<% title truncate(@user.name) %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12">

      <div class="card shadow mb-4">
        <div class="card-body">

          <p>
            <strong><%= t 'activerecord.attributes.user.name' %>:</strong>
            <%= @user.name %>
          </p>

          <p>
            <strong><%= t 'activerecord.attributes.user.email' %>:</strong>
            <a class="btn-link" href="mailto:<%= @user.email %>?subject=Ol√°%20<%= @user.name %>" target="_blank">
              <%= @user.email %>
            </a>
          </p>

          <p>
            <strong><%= t 'activerecord.attributes.user.telephone' %>:</strong>
            <a href="tel:+55<%= @user.telephone&.tr('-() ', '') %>">
              <%= @user.telephone %>
            </a>
          </p>

          <p>
            <strong><%= t 'activerecord.attributes.user.profile_ids' %>
              :</strong>
            <%= @user.profiles.map(&:name).join(', ') %>
          </p>

          <p>
            <strong>Cadastrado por:</strong>
            <% if @user.registered_by.present? %>
              <%= @user.registered_by %>
            <% else %>
              Autocadastro
            <% end %>
          </p>

          <p>
            <strong><%= t 'activerecord.attributes.user.biography' %>:</strong>
            <%= @user.biography %>
          </p>

        </div>
      </div>

    </div>
  </div>
</div>