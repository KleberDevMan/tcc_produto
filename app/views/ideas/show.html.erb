<div class="row align-items-center mb-4">
  <div class="col">
    <h2 class="h4 page-title"><%= @idea.title %></h2>
  </div>
  <div class="col-auto">
    <button type="button" class="btn btn-secondary">Gerenciar colaboradores</button>
    <button type="button" class="btn btn-success">Colaborar</button>
    <button type="button" class="btn btn-warning">Desistir colaboração</button>
  </div>
</div>
<div class="row my-4">
  <div class="col-md-9 mb-4">
    <div class="card shadow mb-4">
      <div class="card-body">
        <dd><%= @idea.description %></dd>
      </div>
    </div>


    <div class="accordion w-100" id="accordion1">
      <div class="card shadow">
        <a role="button" href="#collapse1" data-toggle="collapse" data-target="#collapse1" aria-expanded="false" aria-controls="collapse1">
          <div class="card-header" id="heading1">
            <strong><%= t 'activerecord.attributes.idea.problem_to_solve' %></strong>
          </div>
        </a>
        <div id="collapse1" class="collapse" aria-labelledby="heading1" data-parent="#accordion1">
          <div class="card-body"> <%= @idea.problem_to_solve %> </div>
        </div>
      </div>
      <div class="card shadow">
        <a role="button" href="#collapse2" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
          <div class="card-header" id="heading2">
            <strong><%= t 'activerecord.attributes.idea.suffering_people' %></strong>
          </div>
        </a>
        <div id="collapse2" class="collapse" aria-labelledby="heading2" data-parent="#accordion1">
          <div class="card-body"> <%= @idea.suffering_people %></div>
        </div>
      </div>
      <div class="card shadow">
        <a role="button" href="#collapse3" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
          <div class="card-header" id="heading3">
            <strong><%= t 'activerecord.attributes.idea.proposed_solution' %></strong>
          </div>
        </a>
        <div id="collapse3" class="collapse" aria-labelledby="heading3" data-parent="#accordion1">
          <div class="card-body"> <%= @idea.proposed_solution %></div>
        </div>
      </div>
      <div class="card shadow">
        <a role="button" href="#collapse4" data-toggle="collapse" data-target="#collapse4" aria-expanded="false" aria-controls="collapse4">
          <div class="card-header" id="heading4">
            <strong><%= t 'activerecord.attributes.idea.differential' %></strong>
          </div>
        </a>
        <div id="collapse4" class="collapse" aria-labelledby="heading4" data-parent="#accordion1">
          <div class="card-body"> <%= @idea.differential %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3 ">
    <div class="card shadow mb-4">
      <div class="card-body">
        <h3 class="h5 mb-1">Destaques</h3>
        <p class="text-muted mb-4">Informações que podem te motivar a ser um colaborador.</p>
        <ul class="list-unstyled">
          <li class="my-3">
            <i class="fe fe-dollar-sign mr-2 text-muted"></i>
            <%= t 'activerecord.attributes.idea.possibility_reward' %>
            <span class="text-muted fe fe-24 fe-info" style="font-size: 18px" data-toggle="tooltip" data-placement="bottom" title="Possibilidade de ser remunerado ou recompensado finaceiramente pela ajuda prestada"></span>
            <br>
            <% if @idea.possibility_reward %>
              <span><strong><mark>Sim</mark></strong></span>
            <% else %>
              <span>Não</span>
            <% end %>
          </li>
          <li class="my-2">
            <i class="fe fe-briefcase mr-2 text-muted"></i>
            <%= t 'activerecord.attributes.idea.possibility_business' %>
            <span class="text-muted fe fe-24 fe-info" style="font-size: 18px" data-toggle="tooltip" data-placement="bottom" title="Uma ideia que pode se tornar um empreendimento, algo vendável ou até mesmo uma patente"></span>
            <br>
            <% if @idea.possibility_business %>
              <span><strong><mark>Sim</mark></strong></span>
            <% else %>
              <span>Não</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="card shadow mb-4 p-2">
      <div class="card-body p-0">
        <div class="justify-content-center text-center">
          <%= image_tag @idea.idea_category.get_url_img, class: 'avatar-img ', style: 'background-color: white;border-radius: 5px;', width: 60, height: 60 %>
          <br>
          <span class="badge badge-light"><%= @idea.idea_category.name %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card shadow mb-4">
      <div class="card-header">
        <strong class="card-title"><i class="fe fe-coffee mr-2 text-muted"></i> Desenvolvedores</strong>
      </div>
      <div class="card-body">
        <dl class="row align-items-center mb-0 justify-content-center">
          <% if @idea.devs.any? %>
            <table class="table table-hover table-sm">
              <tbody>
              <% @idea.devs.each do |dev| %>
                <tr>
                  <td><strong><%= dev.name %></strong></td>
                  <td><%= dev.email %></td>
                  <td>
                    <div class="dropdown">
                      <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="text-muted sr-only">Action</span>
                      </button>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr<%= dev.id %>">
                        <a class="dropdown-item" href="<%= user_path dev %>">Visualizar</a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>

              </tr>

              </tbody>
            </table>
          <% else %>
            <div>
              <dd>Não há nenhum desenvolvedor ainda.</dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card shadow mb-4">
      <div class="card-header">
        <strong class="card-title"><i class="fe fe-dollar-sign mr-2 text-muted"></i> Facilitadores</strong>
      </div>
      <div class="card-body">
        <dl class="row align-items-center mb-0 justify-content-center">
          <% if @idea.facilitators.any? %>
            <table class="table table-hover table-sm">
              <tbody>
              <% @idea.facilitators.each do |fac| %>
                <tr>
                  <td><strong><%= fac.name %></strong></td>
                  <td><%= fac.email %></td>
                  <td>
                    <div class="dropdown">
                      <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="text-muted sr-only">Action</span>
                      </button>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr<%= fac.id %>">
                        <a class="dropdown-item" href="<%= user_path fac %>">Visualizar</a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>

              </tr>

              </tbody>
            </table>
          <% else %>
            <div>
              <dd>Não nenhum facilitador ainda.</dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div>