<%= form_with(model: idea, html: { class: "needs-validation", novalidate: '' }) do |form| %>
  <%= form.hidden_field :ideializer_id, value: current_user.id %>

  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h5>
        <%= t 'texts.solve_the_following_problems' %>:
      </h5>
      <ul>
        <% idea.errors.each do |error| %>
          <li class="text-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row justify-content-center">


      <div class="col-12 col-xl-10">

        <div class="row align-items-center my-4">
          <div class="col">
            <h2 class="h3 mb-0 page-title">Ideia</h2>
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary">Savar</button>
          </div>
        </div>

        <hr class="my-4">
        <h5 class="mb-2 mt-4">Dados básicos</h5>
        <p class="mb-4">Informações básicas sobre sua ideia</p>

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control', required: true %>
            <div class="invalid-feedback"> <%= t 'texts.fill_this_field' %> </div>
          </div>

          <div class="form-group col-md-6 col-sm-12">
            <%= form.label :category_ids %>
            <%#= form.select :category_ids, options_for_select(IdeaCategory.active.map { |c| [c.name, c.id] }, idea.category_ids), {}, { class: 'form-control select2-multi', multiple: "multiple", required: true } %>
            <%= form.select :category_ids, options_for_select(IdeaCategory.active.map { |c| [c.name, c.id] }, idea.category_ids), {}, { class: 'form-control', required: true } %>
          </div>

        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control', rows: 4, required: true %>
          </div>
        </div>

        <div class="mt-4">
          <div class="form-row form-check-inline col-md-12">
            <div class=" col-md-6">
              <%= form.check_box :possibility_business, class: 'form-check-input' %>
              <%= form.label :possibility_business %>
              <p class="text-muted"> Marque se você considerá que está ideia pode se tornar um empreendimento, algo
                vendável ou até mesmo uma patente. </p>
            </div>
            <div class=" col-md-6">
              <%= form.check_box :possibility_reward, class: 'form-check-input' %>
              <%= form.label :possibility_reward %>
              <p class="text-muted"> Marque se existe a possíbilidade de você recompensar monetariamente as pessoas que
                desejam colaborar. </p>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
            <%= form.label :status %> <br>
            <% Idea.status.options.each do |type| %>
              <%= form.radio_button :status, type.last, class: 'form-check form-check-inline', checked: type.last == idea.status_value_default, id: type.last %>
              <%= form.label :status, type.first, value: type.last, class: 'mr-3', for: type.last %>
            <% end %>
          </div>
        </div>

        <hr class="my-4">
        <h5 class="mb-2 mt-4">Dados avançados</h5>
        <p class="mb-4">Informações equivalentes a de uma apresentação <a target="_blank" href="https://en.wikipedia.org/wiki/Pitch_(filmmaking)">Pitch</a>. Dados opcionais.</p>

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :problem_to_solve %>
            <%= form.text_area :problem_to_solve, class: 'form-control', rows: 4 %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :suffering_people %>
            <%= form.text_area :suffering_people, class: 'form-control', rows: 4 %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :proposed_solution %>
            <%= form.text_area :proposed_solution, class: 'form-control', rows: 4 %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :differential %>
            <%= form.text_area :differential, class: 'form-control', rows: 4 %>
          </div>
        </div>


        <div class="form-row">
          <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-primary">Savar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
