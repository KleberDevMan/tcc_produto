<% content_for :header do %>

<% end %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12">
      <!-- widgets -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card shadow h-100">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col">
                  <label class="text-muted mb-1">Total ideias</label>
                  <h3 class="card-title mb-0"><%= @qtd_all %></h3>
                  <p class="small text-muted mb-0"><span>Públicas e privadas</span></p>
                </div>
                <div class="col-4 text-right">
                  <span class="inlinepie"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card shadow h-100">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col">
                  <small class="text-muted mb-1">Total visualizações</small>
                  <h3 class="card-title mb-0"><%= @qtd_views %></h3>
                </div>
                <div class="col-4 text-right">
                  <p class="small text-muted mb-0"><span>Última semana</span></p>
                  <span class="inlinebar"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card shadow h-100">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-3 text-center">
                          <span class="circle circle-sm bg-primary">
                            <i class="fe fe-16 fe-filter text-white mb-0"></i>
                          </span>
                </div>
                <div class="col">
                  <p class="small text-muted mb-2"><span class="mr-1">Taxa de colaboração</span><span class="text-muted fe fe-24 fe-info" style="font-size: 18px" data-toggle="tooltip" data-placement="bottom" title="Percentual das suas ideias que obtiveram colaboração"></span></p>
                  <div class="row align-items-center no-gutters">
                    <div class="col-auto">
                      <span class="h3 mr-2 mb-0"> <%= @tax_collaboration %>% </span>
                    </div>
                    <div class="col-md-12 col-lg">
                      <div class="progress progress-sm mt-2" style="height:3px">
                        <div class="progress-bar bg-success" role="progressbar" style="width: <%= @tax_collaboration %>%" aria-valuenow="<%= @tax_collaboration %>" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="row align-items-center my-4">
        <div class="col">
          <h2 class="h3 mb-0 page-title"><%= t 'activerecord.models.ideas' %></h2>
        </div>
        <div class="col-auto">
          <a class="btn btn-primary" href="<%= new_idea_path %>"><span class="fe fe-plus-circle fe-12 mr-2"></span><%= t 'buttons.add' %>
          </a>
        </div>
      </div>

      <% if @ideas.length == 0 and !params[:q].present? %>
        <div class="row">
          <div class="col-sm-12">
            <div class="card shadow">
              <div class="card-body my-4 align-items-center h-100 row justify-content-center">
                <h6 class="">Não há itens cadastrados.</h6>
              </div>
            </div>
          </div>
        </div>
      <% else %>


        <%= search_form_for @q, url: my_ideas_ideas_path do |f| %>
          <div class="row my-4">
            <div class="col-md-6">

              <div class="input-group mb-3">
                <%= f.text_field :title_or_description_or_categories_name_cont, class: 'form-control', placeholder: "Título, descrição, categoria..." %>
                <div class="input-group-append">
                  <button class="btn btn-light" type="submit">
                    <span class="fe fe-search fe-16 text-muted"></span>
                  </button>
                </div>
              </div>

            </div>

            <div class="col-md-auto ml-auto text-right">
              <% if params[:q].present? %>
              <span class="small bg-white border py-1 px-2 rounded mr-2">
                    <a href="<%= my_ideas_ideas_path %>" class="text-muted"><i class="fe fe-x"></i></a>
                    <a href="#" class="text-muted ml-2"><span class="">Filtrado</span></a>
                  </span>
              <% end %>
              <!--              <button type="button" class="btn" data-toggle="modal" data-target=".modal-slide">-->
              <!--                <span class="fe fe-filter fe-16 text-muted"></span>-->
              <!--              </button>-->
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col-md-12">
            <% if @ideas.count == 0 %>
              <!--              <div class="row">-->
              <!--                <div class="col-sm-12">-->
              <div class="card shadow">
                <div class="card-body my-4 align-items-center h-100 row justify-content-center">
                  <h6 class="">Nenhum item correspondente encontrado.</h6>
                </div>
              </div>
              <!--                </div>-->
              <!--              </div>-->
            <% else %>
              <table class="table border table-hover bg-white">
                <thead>
                <tr role="row">
                  <th><%= t 'activerecord.attributes.idea.title' %></th>
                  <th><%= t 'activerecord.attributes.idea.description' %></th>
                  <th><%= t 'activerecord.attributes.idea.idea_category_id' %></th>
                  <th><%= t 'activerecord.attributes.idea.possibility_business' %></th>
                  <th><%= t 'activerecord.attributes.idea.possibility_reward' %></th>
                  <th><%= t 'activerecord.attributes.idea.status' %></th>
                  <th>Ação</th>
                </tr>
                </thead>
                <tbody>
                <% @ideas.each do |idea| %>
                  <tr>
                    <td>
                      <a href="<%= idea_path idea %>"><strong><%= truncate idea.title %></strong></a>
                    </td>
                    <td><%= truncate idea.description %></td>
                    <td><%= truncate idea.categories.map(&:name).join(', ') %></td>
                    <td><%= bool_s idea.possibility_business %></td>
                    <td><%= bool_s idea.possibility_reward %></td>
                    <td>
                      <% if idea.status.public? %>
                        <span class="dot dot-lg mr-2" style="background-color: #3AD29F;"></span><%= idea.status_text %>
                      <% elsif idea.status.private? %>
                        <span class="dot dot-lg mr-2" style="background-color: #2C67FF;"></span><%= idea.status_text %>
                      <% else %>
                        <span class="dot dot-lg mr-2" style="background-color: #EFA302;"></span><%= idea.status_text %>
                      <% end %>
                    </td>
                    <td>
                      <div class="dropdown">
                        <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <span class="text-muted sr-only">Action</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" style="">
                          <a class="dropdown-item" href="<%= idea_path idea %>">Visualizar</a>
                          <a class="dropdown-item" href="<%= edit_idea_path idea %>">Editar</a>
                          <%= link_to 'Excluir', idea, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "dropdown-item text-danger" %>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>

              <%= paginate @ideas %>

            <% end %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

