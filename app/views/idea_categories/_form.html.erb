<%= form_with(model: idea_category, html: { class: "needs-validation", novalidate: '' }) do |form| %>

  <% if idea_category.errors.any? %>
    <div id="error_explanation">
      <h5>
        <%= t 'texts.solve_the_following_problems' %>:
      </h5>
      <ul>
        <% idea_category.errors.each do |error| %>
          <li class="text-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12 col-xl-10">
        <h2 class="mb-2 mt-4"><%= t 'activerecord.models.idea_categories' %></h2>
        <p class="mb-4">Lista de categorias que ir√° aparecer no momento de cadastrar uma ideia.</p>

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', required: true %>
            <div class="invalid-feedback"> <%= t 'texts.fill_this_field' %> </div>
          </div>
        </div>

        <!--          <hr class="my-4">-->
        <div class="form-row">
<!--          <p class="mb-4">Link ou imagem?</p>-->
          <div class="form-group col-md-12">
          <h5 class="mb-2 mt-5">Imagem representativa</h5>
            <%= form.label :link_or_image, class: 'mr-2' %>

            <% IdeaCategory.link_or_image.options.each do |type| %>
              <%= form.radio_button :link_or_image, type.last, class: 'form-check form-check-inline mr-0', checked: type.last == idea_category.link_or_img_value_default, id: type.last %>
              <%= form.label :link_or_image, type.first, value: type.last, class: 'mr-3', for: type.last %>
            <% end %>

            <div id="div-link">
              <%= form.label :img_link %>
              <%= form.text_field :img_link, class: 'form-control', placeholder: 'http://www.sefaz2.to.gov.br/...' %>
            </div>
            <div id="div-img" style="display: none">
              <%= form.label :img %>
              <div class="custom-file">
                <input name="idea_category[img]" type="image" class="custom-file-input" id="customImg">
                <label class="custom-file-label" for="customImg">Selecione a imagem</label>
              </div>
            </div>
          </div>

        </div>

        <hr class="my-4">
        <div class="form-row">
          <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-primary">Savar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% content_for :footer do %>
  <script>
      $(document).ready(function () {
          // $('#div-img').hide()

          $('input[name="idea_category[link_or_image]"]').click(function () {
              const valor = $('input[name="idea_category[link_or_image]"]:checked').val()
              if (valor === 'link') {
                  $('#div-img').hide()
                  $('#div-link').fadeIn(500)
              } else {
                  $('#div-link').hide()
                  $('#div-img').fadeIn(500)
              }
          })
      })
  </script>
<% end %>
