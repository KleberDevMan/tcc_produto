<% title t('activerecord.models.idea_categories'), true %>
<% content_for :page_actions do %>
  <a href="<%= new_idea_category_path %>" class="btn btn-primary"><span class="fe fe-plus-circle fe-12 mr-2"></span>Adicionar</a>
<% end %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <hr class="mb-4 mt-0">
      <p class="mb-4">Lista de categorias que irá aparecer no momento de
        cadastrar uma ideia.</p>
      <div class="card shadow">
        <div class="card-body">
          <table class="table table-hover table-sm">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Imagem</th>
              <th>Status</th>
              <th>Ação</th>
            </tr>
            </thead>
            <tbody>
            <% @idea_categories.each do |idea_category| %>
              <tr>
                <td><strong><%= idea_category.name %></strong></td>
                <td>
                  <a href="<%= idea_category.get_url_img %>" target="_blank">
                    <%= image_tag idea_category.get_url_img, class: 'avatar-img rounded-circle', style: 'background-color: white;', width: 50, height: 50 %>
                  </a>
                </td>
                <td>
                  <% if idea_category.status.active? %>
                    <!--                  <span class="text-primary">Ativo</span>-->
                    <span class="text-success">Ativo</span>
                  <% else %>
                    <span class="text-danger">Inativo</span>
                    <!--                  <span class="text-danger">Inativo</span>-->
                  <% end %>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <span class="text-muted sr-only">Action</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr<%= idea_category.id %>">
                      <a class="dropdown-item" href="<%= edit_idea_category_path idea_category %>">Editar</a>
                      <a class="dropdown-item" href="<%= toggle_status_idea_category_path idea_category %>">
                        <% if idea_category.status.active? %>
                          <span class="text-danger">Inativar</span>
                        <% else %>
                          <span class="text-success">Ativar</span>
                        <% end %>
                      </a>
                      <% if idea_category.ideas.count == 0 %>
                        <a class="sw-delete dropdown-item bg-danger-light text-white" onclick="set_id('<%= idea_category.id %>', '<%= idea_category.class.to_s.split(':')[0] %>')" target="_self" href="#">
                          Excluir
                        </a>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>

            </tr>

            </tbody>
          </table>


        </div>
      </div>

      <!--      <nav aria-label="Table Paging" class="my-3">-->
      <!--        <ul class="pagination justify-content-end mb-0">-->
      <!--          <li class="page-item"><a class="page-link" href="#">Previous</a></li>-->
      <!--          <li class="page-item active"><a class="page-link" href="#">1</a></li>-->
      <!--          <li class="page-item"><a class="page-link" href="#">2</a></li>-->
      <!--          <li class="page-item"><a class="page-link" href="#">3</a></li>-->
      <!--          <li class="page-item"><a class="page-link" href="#">Next</a></li>-->
      <!--        </ul>-->
      <!--      </nav>-->

      <!--      <nav aria-label="Table Paging" class="my-3">-->
      <%= paginate @idea_categories %>
      <!--      </nav>-->

    </div>
  </div>
</div>
