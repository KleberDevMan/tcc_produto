<p id="notice"><%= notice %></p>

<h1>Idea Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @idea_categories.each do |idea_category| %>
      <tr>
        <td><%= idea_category.name %></td>
        <td><%= idea_category.status %></td>
        <td><%= link_to 'Show', idea_category %></td>
        <td><%= link_to 'Edit', edit_idea_category_path(idea_category) %></td>
        <td><%= link_to 'Destroy', idea_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea Category', new_idea_category_path %>
