<% content_for :footer do %>
  <script type="text/javascript" charset="utf-8">
      const ctx = document.getElementById('chart').getContext('2d');
      const chart = new Chart(ctx, {
          type: 'doughnut',
          data: {
              labels: ['TCC', 'Pesquisa', 'Extensão'],
              datasets: [{
                  // label: '# of Votes',
                  data: [<%= (@qtd_tcc*100)/@qtd_all %>, <%= (@qtd_search*100)/@qtd_all %>, <%= (@qtd_extension*100)/@qtd_all %>],
                  backgroundColor: [
                      '#3AD29F',
                      '#2C67FF',
                      '#EFA302'
                  ],
                  borderColor: colors.borderColor,
                  borderWidth: 3
              }]
          },
          options: {
              legend: false,
              tooltips: false,
              maintainAspectRatio: !1,
              responsive: !0
          }
      });
  </script>
<% end %>