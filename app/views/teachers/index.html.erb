<% title t('activerecord.models.teachers'), true %>
<% content_for :page_actions do %>
  <a href="<%= new_teacher_path %>" class="btn btn-primary"><span class="fe fe-plus-circle fe-12 mr-2"></span>Adicionar</a>
<% end %>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <hr class="mb-4 mt-0">
      <p class="mb-4">Lista de docentes que irá aparecer no momento de cadastrar trabalhos acadêmicos.</p>
      <div class="card shadow">
        <div class="card-body">
          <table class="table table-hover table-sm">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Status</th>
              <th>Ação</th>
            </tr>
            </thead>
            <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><strong><%= teacher.name %></strong></td>
                <td>
                  <% if teacher.status.active? %>
                    <span class="text-success">Ativo</span>
                  <% else %>
                    <span class="text-danger">Inativo</span>
                  <% end %>
                </td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-sm dropdown-toggle more-vertical" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <span class="text-muted sr-only">Action</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr<%= teacher.id %>">
                      <a class="dropdown-item" href="<%= edit_teacher_path teacher %>">Editar</a>
                      <a class="dropdown-item" href="<%= toggle_status_teacher_path teacher %>">
                        <% if teacher.status.active? %>
                          <span class="text-danger">Inativar</span>
                        <% else %>
                          <span class="text-success">Ativar</span>
                        <% end %>
                      </a>
                      <% if teacher.academic_works_count == 0 %>
                        <a class="sw-delete dropdown-item bg-danger-light text-white" onclick="set_id('<%= teacher.id %>', '<%= teacher.class.to_s.split(':')[0] %>')" target="_self" href="#">
                          Excluir
                        </a>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
      <%= paginate @teachers %>
    </div>
  </div>
</div>
